{
    "name": "nawhas/nawhas",
    "type": "project",
    "description": "Nawhas.com",
    "license": "MIT",
    "require": {
        "php": "8.1.*",
        "fideloper/proxy": "^4.0",
        "fruitcake/laravel-cors": "^2.0",
        "graham-campbell/github": "^10.3.1",
        "guzzlehttp/guzzle": "^7.2",
        "http-interop/http-factory-guzzle": "^1.0",
        "intervention/image": "^2.5",
        "laravel/framework": "^8.0",
        "laravel/horizon": "^5.0",
        "laravel/sanctum": "^2.0",
        "laravel/scout": "^8.1",
        "laravel/socialite": "^5.0",
        "laravel/telescope": "^4.0",
        "laravel/tinker": "^2.0",
        "league/flysystem-aws-s3-v3": "^1.0",
        "league/fractal": "^0.19.2",
        "meilisearch/meilisearch-php": "^0.20",
        "myclabs/php-enum": "^1.7",
        "sentry/sentry-laravel": "^2.10",
        "spatie/laravel-event-sourcing": "^6.0",
        "spatie/laravel-responsecache": "^7.1",
        "spatie/laravel-sluggable": "^3.0",
        "timacdonald/has-parameters": "^1.3"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.7",
        "facade/ignition": "^2.3.6",
        "fakerphp/faker": "^1.9.1",
        "laravel/dusk": "^6.19",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^5.10",
        "nunomaduro/larastan": "^1.0",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5.10",
        "psalm/plugin-laravel": "^1.5",
        "vimeo/psalm": "^4.15"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "phpstan": [
            "./vendor/bin/phpstan analyze --memory-limit=2G"
        ],
        "psalm:plugin": [
            "./vendor/bin/psalm-plugin"
        ],
        "psalm:lint": [
            "./vendor/bin/psalm"
        ],
        "test": [
            "./vendor/bin/phpunit --colors=always"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
